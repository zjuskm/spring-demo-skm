<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skm.dao.MyBatisUserDao">
    <resultMap id="UserResultMap" type="com.skm.model.User">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="note" property="note"/>
        <result column="sex" property="sex" javaType="com.skm.model.SexEnum" jdbcType="INTEGER" typeHandler="com.skm.model.SexTypeHandler"/>
    </resultMap>
    <select id="getUser" parameterType="long" resultType="com.skm.model.User">
        select id, user_name as userName, sex, note from t_user where id=#{id}
    </select>

    <select id="insertUser" parameterType="com.skm.model.User" resultType="Integer">
        insert into t_user(user_name, note) value(#{userName},#{note})
    </select>
</mapper>
